.gotowall.navigator
  font-size 24px
  font-family 'Roboto', sans-serif
  font-weight 400
  > *,
  > .segment > *
    display inline-block
    height 50px
    vertical-align top
    line-height 50px
  > .host
    //
  > .segment
    > .divider
      //
    > .owner,
    > .repository
      > input
        font-size 24px
        font-family 'Roboto', sans-serif
        font-weight 400
        padding 5px 10px
        background-color white
        border 1px solid #BBBBBB
        border-radius 3px
        max-width 230px
        vertical-align top
        top 4px
        position relative
        box-shadow none
        &:focus
          border-color #9263AC
          border-bottom-width 3px
      > datalist
        //
  > .control
    > button
      vertical-align top
      font-size 18px
      font-family 'Roboto Slab', serif
      font-weight 400
      color white
      background-color #74448E
      border-color #532C68
      border-style solid
      border-width 0 0 3px 0
      border-radius 5px
      padding 10px 35px 10px 20px
      margin-top 2px
      position relative
      &:before
        content 'chevronright'
        width 16px
        color #AD90BD
        font-family icons
        position absolute
        right 10px
        top 0
        line-height 48px

  > .lastVisited
    margin-top 20px
    font-size 18px
    font-weight 300
    display flex
    justify-content center
    line-height 1.5
    > span
      padding 0 10px
    > .lastVisitedWalls
      list-style none
      margin 0px
      padding 0px
      text-align left
      > .visitedWall
        display inline
        &:after
          content ', '
          padding-right 2px
        &:last-child:after
          content ''

@media (max-width: 960px)
  .gotowall.navigator
    > .host
      display none
    > .segment
      display block
      > .divider
        display none
      > .owner,
      > .repository
        > input
          box-sizing border-box
          text-align left
          width 100%
          max-width 480px
    > .control
      margin-top 10px
    > .lastVisited > .lastVisitedWalls > .visitedWall
      display list-item
