#app > .layouts.about
  > .main
    > article
      width 100%
      padding 0
      box-sizing border-box
      margin 80px auto 20px auto
      background white
      padding 0 0 100px 0

      > *
        max-width 960px
        margin-left auto
        margin-right auto
        box-sizing border-box
        padding 0 10px

      a
        color #74448e

      > figure
        margin-top 80px
        margin-bottom 80px

        > iframe
          width 100%

        > figcaption
          text-align center

      > h1
        text-align center
        margin-top 80px

      > p
        //

      > h2
        text-align center
        margin-top 80px

      > ul
        list-style-type none
        display flex
        flex-wrap wrap
        flex-direction row
        justify-content center
        align-items flex-start
        align-content stretch

        > li
          display inline-block
          flex-grow 1
          flex-shrink 1
          flex-basis 180px
          width 180px
          min-width 180px
          max-width 50%
          margin 0 0 30px 0
          text-align center

          > .pic
            display inline-block
            margin 0 auto 10px auto
            width 100px
            height 100px
            overflow hidden
            background-color white
          > .name
            display block
          > .role
            display block
            font-style italic
          > .github
            text-decoration none
            &:before
              content 'github'
              font-family icons
              position relative
              top 2px
              margin-right 5px

      > .contact
        text-align center

        > a
          display inline-block
          padding 10px 20px
          border 4px solid #926aa8
          border-radius 5px
          font-family 'Roboto Slab', serif
          font-weight 700
          font-size 28px
          text-decoration none
