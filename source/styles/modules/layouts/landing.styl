#app > .layouts.landing
  > .main
    > article
      text-align center
      background-color white
      width 100%
      box-sizing border-box
      padding 40px 10px 60px 10px
      margin 80px auto 20px auto
      > h1
        font-size 72px
        margin 0
        > .logotype
          font-family 'Roboto Slab', serif
          > i
            font-weight 300
            font-style normal
            text-transform capitalize
          > b
            font-weight 700
            text-transform lowercase
      > .tagline
        color #333333
        font-weight 400
        font-size 28px
        margin 10px 0 0 0
      > ul
        text-align left
        display inline-block
        padding 0 0 0 20px
        margin 0
        > li
          color #444444
          margin 15px 0
          > a
            color #5A2876
      > .sign-in
        width 100%
      > .gotowall
        color #333333
        font-weight 400
        font-size 20px
        padding-top 30px
        > button
          color white
          font-weight 400
          padding 3px 12px
          background-color #5A2876
          border-radius 5px
          border-style none
          box-sizing border-box
        input
          border-radius 5px
          border solid 1px lightgrey
          width 25%
          max-width 150px
