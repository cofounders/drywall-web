#app > .layouts.landing
  min-height 100%
  background url('/img/bg-grid.png')
  justify-content space-between

  > .pitch
    text-align center
    background-color white
    width 100%
    box-sizing border-box
    padding 40px 10px 60px 10px
    margin 50px auto
    > h1
      font-size 72px
      margin 0
      > .logotype
        font-family 'Roboto Slab', serif
        > i
          font-weight 300
          font-style normal
          text-transform capitalize
        > b
          font-weight 700
          text-transform lowercase
    > .tagline
      color #333333
      font-weight 400
      font-size 28px
      margin 10px 0 0 0
    > ul
      text-align left
      display inline-block
      padding 0 0 0 20px
      margin 0
      > li
        color #444444
        margin 15px 0
        > a
          color #5A2876
    > form
      margin 20px 0 0 0
      padding 0 20px
      > .github
        background-image url('/img/github.svg')
        background-size 60px
        background-position 10px center
        background-repeat no-repeat
        width 100%
        max-width 320px
        height 63px
        box-sizing border-box
        background-color #74448E
        border-color #5A2876
        border-style solid
        border-width 0 0 3px 0
        border-radius 5px
        padding 0 0 0 80px
        text-align left
        > .action
          display block
          color white
          font-family 'Roboto Slab', serif
          font-size 18px
          font-weight 400
          > b
            font-weight 400
        > .description
          display block
          color #BC9ECC
          font-size 12px

  > footer
    align-self flex-end
    text-align center
    padding 0 40px 20px 40px
    box-sizing border-box
    font-family 'Roboto Slab', serif
    font-size 10px
    > .logotype
      color #926AA8
      background-image url('/img/sticky.svg')
      background-size contain
      background-position center top
      background-repeat no-repeat
      height 30px
      > i
        text-transform uppercase
        font-style normal
        font-size 0
        font-weight 300
        display inline-block
        &:first-letter
          font-size 12px
      > b
        text-transform uppercase
        font-style normal
        font-size 0
        font-weight 700
        display inline-block
        &:first-letter
          font-size 12px
    > .copyright
      color #926AA8
      margin 0
    > .references
      font-weight 700
      margin 0
      font-size 0
      > a
        font-size 10px
        color #74448E
        text-decoration none
        &:not(:last-child)
          &:after
            content '|'
            margin auto 5px
            font-weight 300
