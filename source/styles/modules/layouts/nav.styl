#app > .layouts.nav
  min-height 100%
  display flex
  flex-direction column
  flex-wrap nowrap
  align-items center
  position relative

  > header
    position fixed
    top 0
    right 0
    z-index 1000000
    display inline-flex
    transition-duration 0.25s
    transition-delay 0
    transition-timing-function ease-in-out
    transition-property opacity, transform

    > *:not([hidden])
      vertical-align top
      border-radius 0 0 0 5px
      & ~ *
        border-radius 0

  > .main
    transition transform 0.25s ease-in-out

    > article
      flex-grow 0

    > footer
      flex-grow 0
      display flex
      width 100%
      justify-content flex-end
      flex-direction column

  // > aside

#app.navigation-primary-reveal > .layouts.nav
  > header,
  > .main
    transform translateX(calc(-100vw + 50px))

@media (max-width: 640px)
  #app > .layouts.nav
    > header
      &.wall-panning
        opacity 0

@media (min-width: 320px)
  #app.navigation-primary-reveal > .layouts.nav
    > header,
    > .main
      transform translateX(calc(-270px))
