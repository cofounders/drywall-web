#app > .layouts.nav
  min-height 100%
  display flex
  flex-flow column nowrap
  align-items center
  position relative

  > header
    position absolute
    top 0
    right 50px
    z-index 1000000

  > article
    flex-grow 0
    transition transform 0.25s ease-in-out

  // > aside

  > footer
    flex-grow 0
    display flex
    width 100%
    justify-content flex-end
    flex-direction column

#app.navigation-primary-reveal > .layouts.nav
  > article
    transform translateX(calc(-100vw + 50px))

@media (min-width: 320px)
  #app.navigation-primary-reveal > .layouts.nav
    > article
      transform translateX(calc(-270px))
