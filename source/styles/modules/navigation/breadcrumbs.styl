.navigation.breadcrumbs
  background-color #74448E
  border-color #5A2876
  border-style solid
  border-width 0 0 3px 0
  text-decoration none
  position relative
  padding 1px 10px 0 50px
  box-sizing border-box
  min-width 200px
  max-width calc(100vw - 50px)
  .avatar
    position absolute
    top 9px
    left 9px
    width 30px
    height 30px
    border-radius 3px
    border 1px solid #5A2876
    background-color white
  .owner
    font-size 10px
    color #63D6C0
    text-transform uppercase
    margin-right 4px
    white-space nowrap
    max-width calc(100% - 40px)
    display inline-block
    overflow hidden
    text-overflow ellipsis
    position relative
    top 4px
  .account
    font-size 10px
    color white
    text-transform uppercase
    background-color #18BB9C
    border-radius 3px
    display inline-block
    padding 1px 5px
    top -1px
    position relative
  .repository
    display block
    font-size 14px
    color white
    font-weight 400
    white-space: nowrap
    max-width 100%
    overflow hidden
    text-overflow ellipsis
