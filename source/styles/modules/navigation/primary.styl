.navigation.primary
	height 48px
	font-size 0
	position fixed
	top 0
	left 0
	right 0
	box-shadow inset 0 -1px 1px 0 white,
		0 3px 3px 0 rgba(1, 1, 1, 0.1)
	background-color white
	background-image linear-gradient(to bottom, white, darken(white, 5%))
	vertical-align top
	border-bottom 1px solid #c7c7c7

	> .logo
		display inline-block
		height 100%
		padding 14px 50px 0 45px
		height 100%
		box-sizing border-box
		font-size 14px
		color #999
		text-decoration none
		> i
			font-style normal
			text-transform uppercase
			font-weight 100
		> b
			font-weight 700
			text-transform lowercase

	> .breadcrumbs
		display inline-block
		height 100%
		box-sizing border-box
		vertical-align top

	> .account
		display inline-block
		height 100%
		box-sizing border-box
		float right
