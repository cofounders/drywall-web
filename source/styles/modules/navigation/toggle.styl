.navigation.toggle
  font-size 0
  background-color #5A2876
  background-image url('/img/icn-menu.svg')
  background-size 20px
  background-position center
  background-repeat no-repeat
  border-style none
  height 53px
  width 50px
  box-sizing border-box
  padding 0
  z-index 999999
  order 1
  display inline-block
  cursor pointer

#app.navigation-primary-reveal .navigation.toggle
  &:after
    content ''
    display inline-block
    position absolute
    top 0
    right 0
    width 100vw
    height 100vh
