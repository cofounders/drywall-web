.navigation.toggle
  font-size 0
  background-color #5A2876
  background-image url('/img/icn-menu.svg')
  background-size 20px
  background-position center
  background-repeat no-repeat
  border-style none
  height 53px
  width 50px
  box-sizing border-box
  padding 0
  // z-index 999999
  display inline-block
  cursor pointer
  // position relative
  &:after
    content ''
    transition background-color 0.25s linear

#app.navigation-primary-reveal .navigation.toggle
  &:after
    display inline-block
    position absolute
    top 0
    right 0
    width 100vw
    height 100vh
    cursor pointer
    background-color rgba(0, 0, 0, 0.5)
    z-index -1
