.wall.stickie
  box-sizing border-box
  width 336px
  height 336px
  overflow hidden
  position absolute
  color black
  padding 0 0 6px 0
  box-shadow inset 0px 0px 0px 2px rgba(0, 0, 0, 0.1),
    inset 0 -6px 0 0 rgba(0, 0, 0, 0.3)

  > .title
    display block
    box-sizing border-box
    width 100%
    height 100%
    padding 10px 20px 0 20px
    border none
    background transparent
    color #000
    font-size 34px
    font-weight 400
    line-height 41px

  > [readonly]
    opacity 0.25
