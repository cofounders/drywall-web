.walls.wall
  background-color black
  flex auto
  position relative
  display flex
  flex-direction column
  width 100%
  height 100%

  > .controls
    position absolute
    width 100%
    height 100%

  > .grid
    position absolute
    background url('/img/bg-grid.png')
    width 100%
    height 100%

  > .draggablescreen
    position absolute
    background-color transparent
    transition all 0.2s ease-in-out
    width 100%
    height 100%
    cursor grab !important
    cursor -moz-grab !important
    cursor -webkit-grab !important
    &:active
      cursor grabbing !important
      cursor -moz-grabbing !important
      cursor -webkit-grabbing !important

  > .zoom
    pointer-events none
    flex-grow 1
    transition transform 0.2s ease-in-out,
      transform-origin 0.2s ease-in-out
    box-shadow 0px 0px 0px 10px #63319C,
      0px 0px 0px 20px #319CFF,
      0px 0px 0px 30px #0000FF,
      0px 0px 0px 40px #00FF00,
      0px 0px 0px 50px #FFFF00,
      0px 0px 0px 60px #FF0000

    > .stickies
      pointer-events all
      list-style-type none
      overflow visible
      padding 0
      margin 0
      position relative
      width 100%
      height 100%
      box-shadow 0px 0px 0px 10px #63319C,
        0px 0px 0px 20px #319CFF,
        0px 0px 0px 30px #0000FF,
        0px 0px 0px 40px #00FF00,
        0px 0px 0px 50px #FFFF00,
        0px 0px 0px 60px #FF0000
